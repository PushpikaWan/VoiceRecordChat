<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pushpika.voicerecordchat.ReplyMethods">

    <Button android:id="@+id/AddReplyBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="45dp"
        android:text="@string/add_reply"
        android:textStyle="bold"
        android:onClick="add_reply"
        android:textColor="#fff"
        android:background="#21cc60"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Button android:id="@+id/ViewReplyBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="45dp"
        android:text="@string/view_replies"
        android:textStyle="bold"
        android:onClick="view_reply"
        android:layout_below="@+id/AddReplyBtn"
        android:textColor="#fff"
        android:background="#b5cc21"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
