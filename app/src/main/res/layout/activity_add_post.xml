<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pushpika.voicerecordchat.AddPost">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/text_view1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/text_view1"
        android:layout_toRightOf="@+id/text_view1"
        android:layout_toEndOf="@+id/text_view1"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Category"
        android:id="@+id/text_view2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/text_view2"
        android:layout_toRightOf="@+id/text_view2"
        android:layout_toEndOf="@+id/text_view2"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="64dp" />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@id/text_view2"
       android:layout_marginTop="60dp"
       android:id="@+id/linear_1">

       <Button android:id="@+id/record_btn" style="?android:textAppearanceSmall"
       android:layout_width="match_parent" android:layout_height="45dp"
       android:layout_marginTop="16dp" android:text="@string/record"
           android:layout_marginRight="10dp"
       android:textStyle="bold"
       android:onClick="record"
       android:textColor="#fff"
       android:background="#cc2121"
           android:layout_weight="5"/>

       <TextView
           android:id="@+id/timerValue"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:layout_marginTop="16dp"
           android:layout_marginLeft="10dp"
           android:textSize="35sp"
           android:textColor="#201d1d"
           android:text="@string/timerVal"
           android:layout_weight="3"/>


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_1"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_2">

        <Button android:id="@+id/stop_btn" style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:layout_marginTop="16dp" android:text="@string/stop"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:onClick="stop"
            android:textColor="#fff"
            android:background="#8221cc"
            android:layout_weight="1"/>

        <Button android:id="@+id/play_btn" style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:layout_marginTop="16dp" android:text="@string/play"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:onClick="play"
            android:textColor="#fff"
            android:background="#21ccbb"
            android:layout_weight="1"/>



    </LinearLayout>


    <Button android:id="@+id/post_btn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="45dp"
        android:text="@string/record"
        android:layout_below="@id/linear_2"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:onClick="post"
        android:textColor="#fff"
        android:background="#ccc621"
        android:layout_weight="5"/>


</RelativeLayout>
