<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pushpika.voicerecordchat.AudioClipActivity">

    <Button android:id="@+id/PlayBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:text="@string/play_audio"
        android:textStyle="bold"
        android:onClick="Play"
        android:textColor="#fff"
        android:background="#f8fb9a09"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="40dp" />

    <Button android:id="@+id/ReplyBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:text="@string/reply"
        android:textStyle="bold"
        android:onClick="Reply"
        android:textColor="#fff"
        android:background="#0d2d53"
        android:layout_marginTop="12dp"
        android:textSize="40dp"
        android:layout_below="@+id/LikeBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/DownloadBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:text="@string/download"
        android:textStyle="bold"
        android:onClick="Download"
        android:textColor="#080808"
        android:background="#21ccc6"
        android:textSize="30dp"
        android:layout_below="@+id/ReplyBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button android:id="@+id/LikeBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:text="@string/like_"
        android:textStyle="bold"
        android:onClick="Like"
        android:textColor="#fff"
        android:background="#8221cc"
        android:layout_marginTop="13dp"
        android:textSize="40dp"
        android:layout_below="@+id/PlayBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
