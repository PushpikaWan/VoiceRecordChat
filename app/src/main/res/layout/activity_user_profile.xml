<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pushpika.voicerecordchat.UserProfile">

    <Button android:id="@+id/NotificationBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:text="notifications"
        android:textStyle="bold"
        android:onClick="go_notification"
        android:textColor="#fff"
        android:background="#0d2d53"
        android:layout_marginTop="60dp"
        android:textSize="40dp" />

    <Button android:id="@+id/MyPostsBtn" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:text="@string/my_posts"
        android:textStyle="bold"
        android:onClick="go_my_posts"
        android:textColor="#0e0e0e"
        android:background="#21ccc6"
        android:layout_marginBottom="48dp"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
